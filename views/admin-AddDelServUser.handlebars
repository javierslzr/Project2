<div class="container">

    <div class="row">
        <div class="col-9 offset-1">
            <h1>Administrador - Agregar/Borrar un Servicio al Usuario</h1>
            <a href="/">‚Üê Back To Home</a>

            <br />

            <div class="form-group">
                <label for="category">Seleccionar Usuario:</label>
                <select class="custom-select" id="user"></select>
                <button type="submit" class="seleccionar btn btn-success" data-fila={{id}}>Seleccionar</button>

            </div>

            <div class="form-group">
                <label for="category">Seleccionar Ubicacion:</label>
                <select class="custom-select" id="ubicacion"></select>
                <button type="submit" class="seleccionar btn btn-success" data-fila={{id}}>Seleccionar</button>

            </div>



            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Servicio</th>
                        <th scope="col">Costo</th>
                        <th scope="col"></th>
                    </tr>
                </thead>

                {{#each servicios}}

                <tr class="col fila-{{id}}">
                    <td>{{id}}</td>
                    <td contenteditable="true" class="servicio">{{servicio}}</td>
                    <td contenteditable="true" class="costo">{{costo}}</td>
                    <td>
                        <button type="submit" class="agregar btn btn-success" data-fila={{id}}>Agregar</button>
                    </td>
                    <td>
                        <button type="submit" class="delete btn btn-danger" data-fila={{id}}>X</button>
                    </td>
                </tr>

                {{/each}}
            </table>


        </div>
    </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/admin-usuarioAddDelServicio.js"></script>