<div class="container">

    <div class="row">
        <div class="col-9 offset-1">
            <h1>Administrador Catálogo de Servicios</h1>
            <a href="/">← Back To Home</a>


            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Servicio</th>
                        <th scope="col">Costo</th>
                        <th scope="col"></th>
                    </tr>
                </thead>

                {{#each servicios}}

                <tr class="col fila-{{id}}">
                    <td>{{id}}</td>
                    <td contenteditable="true" class="servicio">{{servicio}}</td>
                    <td contenteditable="true" class="costo">{{costo}}</td>
                    <td>
                      <button type="submit" class="editar btn btn-success" data-fila={{id}}>Editar</button>  
                    </td>
                    <td>
                    <button type="submit" class="delete btn btn-danger" data-fila={{id}}>X</button> 
                    </td>
                </tr>

                {{/each}}
            </table>

            <h2>SERVICIO - AGREGAR SERVICIO</h2>
            <div class="container">
                <form>
                    <div class="row">
                        <div class="col">
                            <input type="text" class="form-control" id='servicio' placeholder="Servicio">
                        </div>
                        <div class="col">
                            <input type="text" class="form-control" id='costo' placeholder="Costo">
                        </div>
                        <div class="col">
                            <button type="submit" class="btn btn-success" id='submit'>Agregar</button>
                        </div>
                    </div>
                </form>
                
            </div>

            <div class="container">
                <form>
                    <span class="todo-container">{{Servicio}}</span>
                </form>   
            </div>
        </div>
    </div>

</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/admin-servicios.js"></script>
