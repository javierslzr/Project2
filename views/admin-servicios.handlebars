<div class="container">

    <div class="row">
        <div class="col-9 offset-1">
            <h1>Administrador Catálogo de Servicios</h1>
            <a href="/">← Back To Home</a>

            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Usuario</th>
                        <th scope="col">Servicio</th>
                        <th scope="col">Fecha Inicio</th>
                        <th scope="col">Fecha Final</th>

                    </tr>
                </thead>

                {{#each mainTable}}
                <tr class="col fila-{{id}}">
                    <td>{{id}}</td>
                    <td class="usuario">{{this.Usuarios.name}}</td>
                    <td class="servicio">{{this.Servicio.servicio}}</td>
                    <td class="fechaInicio">{{fechaInicio}}</td>
                    <td class="fechaFinal">{{fechaFinal}}</td>
                </tr>

                {{/each}}
            </table>

            <div class="form-group">
                <label for="category">Seleccionar Servicio:</label>
                <select class="custom-select" id="servicio"></select>
                <button type="submit" class="seleccionar btn btn-success" data-fila={{id}}>Seleccionar</button>

            </div>

             <div class="form-group">
                <label for="category">Seleccionar Ubicacion:</label>
                <select class="custom-select" id="ubicacion"></select>
                <button type="submit" class="seleccionar btn btn-success" data-fila={{id}}>Seleccionar</button>

            </div>

