<div class="container">
	<div class="row">
		<div class="col-9 offset-1">
			<h1>Bienvenido Admin</h1>
			<a href="/">‚Üê Back To Home</a>
			<div class="row">
				<h2>Usuarios Inscritos</h2>
				<table class="table table-dark">
					<thead>
						<tr>
							<th scope="col">Id</th>
							<th scope="col">Nombre</th>
							<th scope="col">Correo</th>
							<th scope="col">Telefono</th>
							<th scope="col"></th>
							<th scope="col"></th>

						</tr>
					</thead>

					{{#each datos}}

					<tr class="col fila-{{id}}">
						<td>{{id}}</td>
						<td contenteditable="true" class="nombre">{{name}}</td>
						<td contenteditable="true" class="correo">{{correo}}</td>
						<td contenteditable="true" class="telefono">{{telefono}}</td>
						<td><button type="submit" class="editar btn btn-success" data-fila={{id}}>Editar</button></td>
						<td><button class="delete btn btn-danger">x</button></td>
					</tr>
					{{/each}}

				</table>
				<h2>Agregar Usuario</h2>

				<form>
					<div class="row">
						<div class="col">
							<input id="nombre" type="text" class="form-control" placeholder="Nombre">
						</div>
						<div class="col">
							<input id="correo" type="text" class="form-control" placeholder="Correo">
						</div>
						<div class="col">
							<input id="telefono" type="text" class="form-control" placeholder="Telefono">
						</div>
						<div class="col">
							<button id="submit" type="submit" class="btn btn-success">Agregar</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>

	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<script src="/js/admin-usuarios.js"></script>